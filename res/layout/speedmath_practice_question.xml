<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

      <TextView
          android:id="@+id/speedmath_practice_question_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Q. 1 25X25 "
          android:textColor="#343434"
          android:textSize="20sp" />

      <TextView
          android:id="@+id/speedmath_practice_question_eq"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=" = "
          android:textColor="#343434"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/speedmath_practice_question_input"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:text="2582323"
          android:textColor="#343434"
          android:textSize="20sp" />

      <Button
          android:id="@+id/speedmath_practice_question_button"
          android:layout_width="80dp"
          android:layout_height="40dp"
          android:background="@drawable/check"
          android:textColor="#343434"
          android:textSize="20sp"
          android:width="100dp" />

</LinearLayout>