<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:listSelector="@drawable/list_selector"
        android:paddingTop="50dip"
        android:paddingBottom="70dip"
         >
    </ListView>

	<RelativeLayout
	    android:id="@+id/level_0_last"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/listview"
	    android:layout_marginBottom="0dp"
	    android:background="@drawable/list_selector_last"
	    android:orientation="vertical"
	    
	    
	     >

    <ImageView
        android:id="@+id/level_0_head_imgL"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="#000000"
        android:padding="1dp"
        android:src="@drawable/level_0_challenge"/>

    <TextView
        android:id="@+id/level_0_head_textL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_0_left_textL"
        android:layout_alignTop="@+id/level_0_tail_imgL"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/level_0_tail_imgL"
        android:text="   Play challenge"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#040404"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/level_0_tail_imgL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/next" />

    <TextView
        android:id="@+id/level_0_right_textL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/level_0_left_textL"
        android:layout_alignBottom="@+id/level_0_left_textL"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/level_0_left_textL"
        android:text="Take Test"
        android:textColor="#343434"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/level_0_left_textL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level_0_head_textL"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/level_0_head_imgL"
        android:text="Take Tour"
        android:textColor="#343434"
        android:textSize="12sp" />

</RelativeLayout>
	    
</RelativeLayout>